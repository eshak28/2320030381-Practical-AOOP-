package login;

public class logger {
	public class Logger
	{
	private static Logger instance;
	private Logger()
	{
System.out.println("LOGIN");	//private constructor to prevent direct instantiation
	}
	public static Logger getInstance()
	{
	if(instance==null)
	{
	instance=new Logger();
	}
	return instance;
	}
	public void log(String message)
	{
	System.out.println("Logging message: "+message);
	}
	}
}
